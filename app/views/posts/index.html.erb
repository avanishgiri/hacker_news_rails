<p>
  Welcome, <%= @user.name %>
</p>
<%= link_to "new", new_post_path %>
<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="post">
    <span class="votecount"><%= post.votecount %></span>
    <%= render :partial => "index_post", :locals => {post: post} %> 
    <span>
      <button class="vote" data-postid="<%=post.id%>">Upvote</button>
      <button class="vote" data-postid="<%=post.id%>">Downvote</button>
    </span>
  </div>
  <br>
<% end %> 


